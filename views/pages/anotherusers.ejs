    <link rel="stylesheet" type="text/css" href="css/testi.css" />
    <style>
        body {
            padding-top: 50px;
        }
    </style>
</head>

<body class="container">
    <header>

        <%- include('../partials/header') %>
    </header>
    <main>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Nimi</th>
                    <th scope="col">Ikä</th>
                </tr>
            </thead>
            <% users.forEach(function(user){ %>
                <% if (user.name !="John" ) { %>

                    <tr>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.age %>
                        </td>
                    </tr>

                    <% } %>

                        <% })%>
        </table>
        </div>
    </main>
